<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Car Rental System</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="~/Content/loading-placeholder.css" rel="stylesheet" media="screen">
        <link href="~/Content/Layout.css" rel="stylesheet" media="screen">
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
    </head>
    <body data-ng-app="appMain">
        @Html.Partial("~/Views/Shared/_TopBar.cshtml")
        <div class="wrapper">
            <div class="container" style="padding-top: 15px;">
                <div class="content-wrapper main-content clear-fix">
                    <div style="margin-top: 35px;">
                        <a href="@Url.Action("Index", "Home")"><img src="@Url.Content("~/Images/Pluralsight.png")"
                             style="margin-top: 30px; width: 320px; height: 80px;" /></a>
                    </div>
                    <section id="mainbody">
                        @RenderBody()
                    </section>
                </div>
            </div>
            <div class="push"></div>
        </div>
        @Html.Partial("~/Views/Shared/_BottomBar.cshtml")

        <script type="text/javascript">
            window.CarRental = {};
            (function (cr) {
                var rootPath;
                cr.rootPath = rootPath;
            }(window.CarRental));
            CarRental.rootPath = '@Url.Content("~")';
            //alert(CarRental.rootPath);
        </script>
        
        <script src="~/Scripts/moment.js" type="text/javascript"></script>
        <script src="~/Scripts/angular.js"></script>
        <script src="~/Scripts/angular-route.js"></script>
        <script src="~/Scripts/angular-animate.js"></script>

        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/bootstrap")

        <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
        <script src="@Url.Content("~/Scripts/App.js")" type="text/javascript"></script>

        @RenderSection("scripts", required: false)
        <script type="text/javascript">
            @RenderSection("footerScript", required: false)
        </script>
    </body>
</html>

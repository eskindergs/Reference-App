@{
    ViewBag.Title = "My Account";
    ViewBag.Name = "Account";
}
@section scripts
{
    <script src="@Url.Content("~/Binding/ViewModels/MyAccountViewModel.js")" type="text/javascript"></script>
}

<br />
<h2>My Account</h2>

<div data-ng-controller="MyAccountViewModel">
    <div ng-switch="viewMode">
        <div ng-switch-when="account">
            <form>
                @Html.Partial("~/Views/Shared/_ValidationErrors.cshtml")
                <p class="input-group" style="width: 400px">
                    <span class="input-group-addon" style="width: 140px; text-align: left;">First name:</span>
                    <input type="text" class="form-control" ng-model="accountModel.FirstName" placeholder="first name" />
                </p>
                <p class="input-group" style="width: 400px">
                    <span class="input-group-addon" style="width: 140px; text-align: left;">Last name:</span>
                    <input type="text" class="form-control" ng-model="accountModel.LastName" placeholder="last name" />
                </p>
                <p class="input-group" style="width: 500px">
                    <span class="input-group-addon" style="width: 140px; text-align: left;">Address:</span>
                    <input type="text" class="form-control" ng-model="accountModel.Address" placeholder="address" />
                </p>
                <p class="input-group" style="width: 500px">
                    <span class="input-group-addon" style="width: 140px; text-align: left;">City:</span>
                    <input type="text" class="form-control" ng-model="accountModel.City" placeholder="city" />
                </p>
                <p class="input-group" style="width: 250px">
                    <span class="input-group-addon" style="width: 140px; text-align: left;">State:</span>
                    <input type="text" class="form-control" ng-model="accountModel.State" placeholder="state" />
                </p>
                <p class="input-group" style="width: 300px">
                    <span class="input-group-addon" style="width: 140px; text-align: left;">Zip code:</span>
                    <input type="text" class="form-control" ng-model="accountModel.ZipCode" placeholder="zip code" />
                </p>
                <p class="input-group" style="width: 400px">
                    <span class="input-group-addon" style="width: 140px; text-align: left;">Credit card #:</span>
                    <input type="text" class="form-control" ng-model="accountModel.CreditCard" placeholder="credi card" />
                </p>
                <p class="input-group" style="width: 400px">
                    <span class="input-group-addon" style="width: 140px; text-align: left;">Exp. date:</span>
                    <input type="text" class="form-control" ng-model="accountModel.ExpDate" placeholder="MM/YY" />
                </p>
                <hr style="width: 415px; text-align: left;" />
                <p>
                    <button type="submit" class="btn btn-info" ng-click="save()">Save</button>
                </p>
            </form>
        </div>
        <div ng-switch-when="success">
            <h2>Account information updated!</h2>
        </div>
    </div>
</div>

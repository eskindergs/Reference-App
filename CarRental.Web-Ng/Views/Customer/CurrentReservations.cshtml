@{
    ViewBag.Title = "Current Reservations";
    ViewBag.Name = "CustomerActions";
}
@section scripts
{
    <script src="@Url.Content("~/Binding/ViewModels/CurrentReservationsViewModel.js")" type="text/javascript"></script>
}

<br />
<h2>Current Reservations</h2>

<div data-ng-controller="CurrentReservationsViewModel">
    <div ng-show="init && reservations.length > 0">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Car</th>
                    <th>Pickup Date</th>
                    <th>Return Date</th>
                </tr>
            </thead>
            <tbody ng-repeat="reservation in reservations">
                <tr style="vertical-align: central">
                    <td>
                        <a href="#" ng-hide="reservation.CancelRequest" ng-click="requestCancelReservation(reservation)">request cancelation</a>
                        <span ng-show="reservation.CancelRequest">
                            <a href="#" class="label label-danger" ng-click="cancelReservation(reservation)">confirm</a>
                            <a href="#" class="label label-success" ng-click="undoCancelRequest(reservation)">cancel</a>
                        </span>
                    </td>
                    <td>{{ reservation.Car }}</></td>
                    <td>{{ reservation.RentalDate | date: 'MM/dd/yyyy' }}</td>
                    <td>{{ reservation.ReturnDate | date: 'MM/dd/yyyy' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div ng-show="init && reservations.length == 0">
        <h3>You do not have any open reservations on file.</h3>
    </div>
</div>
